{% extends 'admin/base.html.twig' %}

{% block title %}Sun and Fun - Listes des chambres
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="my-4">Les réservations</h1>
		<hr>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Chambres</th>
					<th scope="col">Image</th>
					<th scope="col">Date d'arrivée</th>
					<th scope="col">Date de départ</th>
					<th scope="col">Nom</th>
					<th scope="col">Email</th>
					<th scope="col" colspan="3">Date d'ajout</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="table-light">
						<th scope="row">{{ reservation.id }}</th>
						<td>{{reservation.chambre.titre}}</td>
						<td><img src="{{ asset("/uploads/" ~ reservation.chambre.image) }}" alt="{{reservation.chambre.titre}}" width="50"></td>
						<td>{{ reservation.checkingAt|date('d/m/Y H:i') }}</td>
						<td>{{ reservation.checkoutAt|date('d/m/Y H:i') }}</td>
						<td>{{ reservation.nom }}</td>
						<td>{{ reservation.email }}</td>
						<td>{{ reservation.createdAt|date("d/m/Y H:i") }}</td>
						<td>
							<a href="{{ path('admin_reservation_show', {'id': reservation.id }) }}" class="text-info"><i class="fas fa-eye"></i></a>
						</td>
						<td>
							<a href="{{ path('admin_reservation_delete', { 'id' : reservation.id }) }}" class="text-danger"><i class="fas fa-trash"></i></a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
