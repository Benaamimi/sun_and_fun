{% extends 'admin/base.html.twig' %}

{% block title %}Sun and Fun - Listes des chambres
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="my-4">Les Chambres</h1>
		<a href="{{ path('admin_reservation_create') }}" class="btn btn-primary">Réservation</a>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Chambres</th>
					<th scope="col">Image</th>
					<th scope="col">Date d'arrivée</th>
					<th scope="col">Date de départ</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					{# <th scope="col">Nombre de personne</th> #}
					<th scope="col">Email</th>
					<th scope="col">Téléphone</th>
					<th scope="col" colspan="2">Date d'ajout</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation in reservations %}
					<tr class="table-light">
						<th scope="row">{{ reservation.id }}</th>
						<td>{{reservation.chambre.titre}}</td>
						<td><img src="{{ asset("/uploads/" ~ reservation.chambre.image) }}" alt="{{reservation.chambre.titre}}" width="50"></td>
						<td>{{ reservation.checkingAt|date('d/m/Y H:i') }}</td>
						<td>{{ reservation.checkoutAt|date('d/m/Y H:i') }}</td>
						<td>{{ reservation.nom }}</td>
						<td>{{ reservation.prenom }}</td>
						{# <td>{{ reservation.personneNumber }}</td> #}
						<td>{{ reservation.email }}</td>
						<td>{{ reservation.phone }}</td>
						<td>{{ reservation.createdAt|date("d/m/Y H:i") }}</td>
						<td>
							<a href="#" class="btn btn-outline-primary btn-sm">Détails</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
