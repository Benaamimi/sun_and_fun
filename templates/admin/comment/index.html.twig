{% extends "admin/base.html.twig" %}


{% block body %}

	<section class="container mt-4">
		<h1 class="mt-5">Gestion des commentaires</h1>
		<hr>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom complet</th>
					<th scope="col">Commentaire</th>
					<th scope="col">Publication</th>
					<th scope="col" colspan="3">Date d'ajout</th>
				</tr>
			</thead>
			<tbody>
				{% for comment in comments %}
					<tr class="table-light">
						<th scope="row">{{ comment.id }}</th>
						<td>{{ comment.nomComplet }}</td>
						<td>{{ comment.contenu }}</td>
						<td>{{ comment.isPublished ? 'Publi√©':'En attente' }}</td>
						<td>{{ comment.createdAt|date("d/m/Y H:i") }}</td>
						<td>
							<a href="{{ path('admin_comment_show', {'id': comment.id }) }}" class="text-info"><i class="fas fa-eye"></i></a>
						</td>
						<td>
							<a href="{{ path('admin_chambre_delete', { 'id' : comment.id }) }}" class="text-danger"><i class="fas fa-trash"></i></a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>


{% endblock %}
