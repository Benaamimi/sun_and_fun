{% extends 'front/base.html.twig' %}

{% block title %}Detail de chambre
{% endblock %}

{% block body %}

	{# <div class="position-relative">
			<img class="card-img" src="{{ asset("/uploads/" ~ chambre.image)|imagine_filter('full_size') }}"></img>
		<div class="position-absolute top-50 start-50 translate-middle text-center">
			<h1 class="text-light fw-bold">Chambre "{{ chambre.titre }}"</h1>
